// Place your key bindings in this file to override the defaultsauto[]
[
    {
        // Open terminal panel
        "key": "ctrl+l",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    {
        // Hide terminal panel
        "key": "ctrl+l",
        "command": "workbench.action.togglePanel",
        "when": "terminalFocus"
    },
    {
        // Focus on editor panel
        "key": "ctrl+h",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        // Focus on next terminal
        "key": "ctrl+k",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        // Focus on previous terminal
        "key": "ctrl+j",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        // Focus on next terminal
        "key": "ctrl+k",
        "command": "workbench.action.focusBelowGroup",
        "when": "!terminalFocus"
    },
    {
        // Focus on previous terminal
        "key": "ctrl+j",
        "command": "workbench.action.focusAboveGroup",
        "when": "!terminalFocus"
    },
    {
        // Split current terminal
        "key": "ctrl+s",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    {
        // Split current terminal
        "key": "ctrl+s",
        "command": "workbench.action.splitEditorDown",
        "when": "!terminalFocus"
    },
    {
        // Close terminal panel
        "key": "ctrl+q",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        // Run previous command in the terminal
        "key": "ctrl+w",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "!!\u000D\u000D"
        }
    },
    {
        // Run selected text in editor on terminal
        "key": "ctrl+r",
        "command": "workbench.action.terminal.runSelectedText",
        "when": "!terminalFocus"
    },
    {
        // Toggle sidebar
        "key": "ctrl+e",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "!sideBarVisible"
    },
    {
        // Toggle sidebar
        "key": "ctrl+e",
        "command": "multiCommand.closeFileExplorer",
        "when": "sideBarVisible"
    },
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    {
        // Quick Fixes
        "key": "ctrl+space",
        "command": "editor.action.quickFix",
        "when": "!inQuickOpen"
    }
]
